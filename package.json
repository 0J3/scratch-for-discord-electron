{
	"name": "scratchfordiscord",
	"description": "Scratch For Discord but using electron",
	"version": "1.0.1",
	"main": "js/app.js",
	"repository": "git@github.com:0J3/scratch-for-discord-electron.git",
	"author": "0J3 <git@wafflepowered.com>",
	"license": "AGPL-3.0-or-later",
	"dependencies": {
		"@types/node": "^14.14.17",
		"fs-extra": "^9.0.1"
	},
	"devDependencies": {
		"electron": "^11.5.0",
		"electron-builder": "^22.9.1",
		"electron-builder-squirrel-windows": "^22.10.4"
	},
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --win"
	},
	"build": {
		"appId": "xyz.0j3.ScratchForDiscord",
		"productName": "Scratch for Discord",
		"copyright": "Copyright Â© 2020 0J3.",
		"win": {
			"icon": "icons/ico.ico",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				},
				{
					"target": "dir",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64"
					]
				}
			],
			"publisherName": "0J3"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "icons/ico.ico",
			"uninstallerIcon": "icons/ico.ico",
			"license": "license.html",
			"menuCategory": true
		},
		"asar": false
	}
}
